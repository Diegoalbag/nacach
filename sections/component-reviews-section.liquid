<div class="aw-flex aw-flex-col aw-gap-4 lg:aw-gap-12 aw-px-5 aw-py-7">
  <div class="aw-w-full">
    <h2 
      class="aw-text-center !aw-p-0 !aw-text-2xl lg:!aw-text-4xl !aw-font-bold aw-uppercase aw-leading-8"
    >Real Reviews From Real Customers
    </h2>
  </div>
  <div
    x-data="ReviewsSlider({
      swiperOptions: {
        centeredSlides: true,
        spaceBetween: 20,
        slidesPerView: 1.05,
        loop: true,
        navigation: {
          nextEl: '.button-next',
          prevEl: '.button-prev',
        },
        breakpoints: {
          440: {
            slidesPerView: 1.2
          },
          500: {
            slidesPerView: 1.5
          },
          620: {
            slidesPerView: 1.8
          },
          740: {
            slidesPerView: 2.2
          },
          900: {
            slidesPerView: 2.7
          },
          1100: {
            slidesPerView: 3.2
          },
          1300: {
            slidesPerView: 3.7
          },
          1500: {
            slidesPerView: 4.2
          },
          1700: {
            slidesPerView: 4.7
          },
          1900: {
            slidesPerView: 5.2
          },
        }
      }
    })"
    class="SliderContainer aw-relative aw-w-full slider aw-overflow-hidden"
  >
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="aw-bg-pink-600 aw-relative aw-h-min aw-rounded-lg aw-p-10">
            <!-- Review Content -->
            <div class="review-content aw-flex aw-flex-col aw-gap-7">
              <div class="aw-flex aw-items-center aw-gap-[5px]">
                {% for i in (1..5) %}
                  {% render 'icon-review-star' %}
                {% endfor %}
              </div>
              <p class="aw-text-white aw-text-sm aw-mt-2">
                {{ block.settings.review }}
              </p>
              <div class="verified aw-flex aw-items-center">
                {% render 'icon-verified-buyer' %}
                <span class="aw-text-white aw-text-sm aw-ml-2">Verified buyer</span>
              </div>
            </div>
            <div class="aw-absolute aw-rotate-90 aw-w-0 aw-h-0 aw-bottom-0 aw-translate-y-1/2 aw-border-l-[16px] aw-border-r-[16px] aw-border-b-[20px] aw-border-l-transparent aw-border-r-transparent aw-border-b-pink-600"></div>
          </div>
          <div class="aw-px-5">
            <h3 class="aw-uppercase aw-text-xl">
              {{ block.settings.name }}
            </h3>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="button-next aw-absolute aw-bg-gray-100 aw-rounded-full aw-z-50 aw-top-1/3 -aw-right-4 aw-w-10 aw-h-10 aw-flex aw-justify-center aw-items-center">
      {% render 'icon-right' %}
    </div>
    <div class="button-prev aw-absolute aw-bg-gray-100 aw-rounded-full aw-z-50 aw-top-1/3 -aw-left-4 aw-rotate-180 aw-w-10 aw-h-10 aw-flex aw-justify-center aw-items-center">
      {% render 'icon-right' %}
    </div> 

  </div>
</div>
{% schema %}
{
  "name": "Reviews Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Real Reviews From Real Customers"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "review",
          "label": "Review",
          "default": "This wax is amazing! Extremely effective! Leaves skin feeling smooth.. Love the consistency.. Definitely some of the best wax iv ever used! In love!"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Terry A."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Section"
    }
  ]
}
{% endschema %}